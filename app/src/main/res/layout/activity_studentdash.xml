<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".studentdash">
    <androidx.cardview.widget.CardView

        android:layout_marginTop="100dp"
        android:layout_width="150dp"
        android:layout_marginLeft="20dp"
        android:layout_height="150dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        >

        <LinearLayout

            android:layout_width="150dp"
            android:layout_height="150dp"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/adddriver"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:src="@drawable/baseline_send_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Send Message"/>


        </LinearLayout>



    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView

        android:layout_marginTop="100dp"
        android:layout_width="150dp"
        android:layout_marginLeft="220dp"
        android:layout_height="150dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        >

        <LinearLayout

            android:layout_width="150dp"
            android:layout_height="150dp"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/showcom"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:src="@drawable/baseline_lock_open_24"/>

            <TextView
                android:layout_width="182dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="      permisssion"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />


        </LinearLayout>



    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView

        android:layout_marginTop="300dp"
        android:layout_width="150dp"
        android:layout_marginLeft="220dp"
        android:layout_height="150dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        >

        <LinearLayout

            android:layout_width="150dp"
            android:layout_height="150dp"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/showfeedback"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:src="@drawable/baseline_ac_unit_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Request"/>


        </LinearLayout>



    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView

        android:layout_marginTop="300dp"
        android:layout_width="150dp"
        android:layout_marginLeft="30dp"
        android:layout_height="150dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        >

    <LinearLayout

        android:layout_width="150dp"
        android:layout_height="150dp"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/tips"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:src="@drawable/baseline_lock_24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Logout"/>


    </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>